<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:id="@+id/layoutEmptyCart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sepetiniz Boş"
            android:textSize="20sp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layoutCartContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCartItems"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/footerCart"
            android:padding="8dp"/>

        <LinearLayout
            android:id="@+id/footerCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#FFFFFF"
            android:elevation="10dp"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCartTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tahmini Toplam: 0 ₺"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333"
                android:gravity="end"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnRemoveSelected"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Seçilileri Sil"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#D32F2F"
                    app:icon="@android:drawable/ic_menu_delete"
                    app:iconGravity="textStart"/>

                <Button
                    android:id="@+id/btnOpenSelected"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Seçili Ürünleri Aç"
                    android:backgroundTint="#FF6F00"
                    app:icon="@android:drawable/ic_menu_send"
                    app:iconGravity="textStart"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</FrameLayout>