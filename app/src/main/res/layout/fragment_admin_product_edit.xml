<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ürün Ekle/Düzenle"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="3dp"/>

        <EditText
            android:id="@+id/etProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ürün Adı"/>

        <EditText
            android:id="@+id/etProductPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fiyat (Örn: 12.500 TL)"
            android:inputType="text"
            android:layout_marginTop="3dp"/>

        <EditText
            android:id="@+id/etProductCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kategori (Yatak Odası, Köşe Takımı vb.)"
            android:layout_marginTop="3dp"/>

        <EditText
            android:id="@+id/etProductImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Resim URL"
            android:layout_marginTop="3dp"/>

        <EditText
            android:id="@+id/etProductUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ürün URL"
            android:layout_marginTop="3dp"/>

        <EditText
            android:id="@+id/etProductDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ürün Açıklaması"
            android:minLines="3"
            android:gravity="top"
            android:layout_marginTop="3dp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchProductActive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ürün Aktif (Satışta)"
            android:checked="true"
            android:layout_marginTop="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bağlı Olduğu Mağaza:"
            android:textStyle="bold"
            android:layout_marginTop="3dp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchHasAR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AR Desteği Var"
            android:layout_marginTop="3dp"/>

        <EditText
            android:id="@+id/etArModelPath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="AR Model Path (örn: models/chair.glb)"
            android:layout_marginTop="3dp"/>

        <EditText
            android:id="@+id/etArScale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="AR Ölçek (örn: 0.5)"
            android:inputType="numberDecimal"
            android:layout_marginTop="3dp"/>

        <Spinner
            android:id="@+id/spinnerStores"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"/>

        <Button
            android:id="@+id/btnSaveProduct"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Kaydet"
            android:backgroundTint="#673AB7"
            android:layout_marginTop="3dp"/>

        <Button
            android:id="@+id/btnDeleteProduct"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Ürünü Sil"
            android:backgroundTint="#D32F2F"
            android:layout_marginTop="3dp"
            android:visibility="gone"/>

    </LinearLayout>
</ScrollView>