<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#F5F5F5">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_preferences"
            app:tint="#333333"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detaylı Filtreleme"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fiyat Aralığı (TL)"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etMinPrice"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="Min"
                    android:inputType="number"
                    android:background="@drawable/bg_quantity_control"
                    android:paddingHorizontal="12dp"
                    android:layout_marginEnd="8dp"/>

                <EditText
                    android:id="@+id/etMaxPrice"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="Max"
                    android:inputType="number"
                    android:background="@drawable/bg_quantity_control"
                    android:paddingHorizontal="12dp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginVertical="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Değerlendirme Puanı"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvRatingInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filtre yok"
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView android:id="@+id/star1" android:layout_width="36dp" android:layout_height="36dp" android:src="@drawable/ic_heart_outline" app:tint="#FFC107" android:padding="2dp"/>
                    <ImageView android:id="@+id/star2" android:layout_width="36dp" android:layout_height="36dp" android:src="@drawable/ic_heart_outline" app:tint="#FFC107" android:padding="2dp"/>
                    <ImageView android:id="@+id/star3" android:layout_width="36dp" android:layout_height="36dp" android:src="@drawable/ic_heart_outline" app:tint="#FFC107" android:padding="2dp"/>
                    <ImageView android:id="@+id/star4" android:layout_width="36dp" android:layout_height="36dp" android:src="@drawable/ic_heart_outline" app:tint="#FFC107" android:padding="2dp"/>
                    <ImageView android:id="@+id/star5" android:layout_width="36dp" android:layout_height="36dp" android:src="@drawable/ic_heart_outline" app:tint="#FFC107" android:padding="2dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/btnResetRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sıfırla"
                    android:textColor="#D32F2F"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginVertical="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Mağazalar"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/btnSelectAllStores"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tümünü Seç"
                    android:textColor="#2196F3"
                    android:textSize="12sp"
                    android:padding="4dp"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/btnDeselectAllStores"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temizle"
                    android:textColor="#D32F2F"
                    android:textSize="12sp"
                    android:padding="4dp"/>
            </LinearLayout>

            <EditText
                android:id="@+id/etSearchStore"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Mağaza ara..."
                android:background="@drawable/bg_quantity_control"
                android:paddingHorizontal="12dp"
                android:textSize="14sp"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:drawablePadding="8dp"
                android:layout_marginBottom="12dp"/>

            <ProgressBar
                android:id="@+id/progressStores"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/containerStores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnApplyFilters"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="SONUÇLARI GÖSTER"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            android:backgroundTint="#673AB7"/>
    </LinearLayout>

</LinearLayout>