<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefreshProduct"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/bottomBar"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgProductDetail"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="#F5F5F5"
                    android:scaleType="fitCenter"
                    android:src="@android:drawable/ic_menu_gallery" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="2dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_launcher_background"
                            android:backgroundTint="#F0F0F0"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="4dp"
                            android:paddingVertical="2dp">

                            <ImageView
                                android:id="@+id/imgCategoryIcon"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@android:drawable/ic_menu_sort_by_size"
                                app:tint="#616161"
                                android:layout_marginEnd="4dp"/>

                            <TextView
                                android:id="@+id/tvProductCategory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" K \n A  \n T  \n E  \n G  \n O  \n R  \n Ä°"
                                android:textColor="#616161"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnViewInAr"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="146dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="16dp"
                                android:text="ðŸ“± Evinizde GÃ¶rÃ¼n (AR)"
                                android:visibility="visible"
                                app:icon="@android:drawable/ic_menu_camera" />
                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"/>

                        <LinearLayout
                            android:id="@+id/layoutFavorite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="4dp">

                            <ImageView
                                android:id="@+id/imgFavoriteIcon"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/ic_heart_outline"/>

                            <TextView
                                android:id="@+id/tvFavoriteText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Favorilere Ekle"
                                android:textSize="10sp"
                                android:textColor="#E91E63"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="top">

                        <TextView
                            android:id="@+id/tvProductName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ÃœrÃ¼n Ä°smi"
                            android:textColor="#212121"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvProductPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00 â‚º"
                            android:textColor="#4CAF50"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvProductDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="AÃ§Ä±klama..."
                        android:textColor="#616161"
                        android:textSize="14sp"
                        android:maxLines="2"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/tvDescriptionToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TÃ¼mÃ¼nÃ¼ GÃ¶r"
                        android:textColor="#1976D2"
                        android:textStyle="bold"
                        android:paddingTop="2dp"
                        android:visibility="gone"
                        android:clickable="true"
                        android:focusable="true"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="4dp"
                        android:background="#EEEEEE" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvAvgRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:textColor="#FFC107"
                            android:layout_marginEnd="12dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RatingBar
                                android:id="@+id/rbProductAvg"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:theme="@style/Widget.AppCompat.RatingBar.Small"
                                android:progressTint="#FFC107"
                                android:secondaryProgressTint="#FFC107"
                                android:isIndicator="true"
                                android:numStars="5"/>

                            <TextView
                                android:id="@+id/tvRatingCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(0 DeÄŸerlendirme)"
                                android:textSize="12sp"
                                android:textColor="#757575"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="DeÄŸerlendirmeler"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#333"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAddReview"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Puan Ver"
                            android:textSize="12sp"
                            app:icon="@android:drawable/btn_star"
                            android:backgroundTint="#2196F3"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvBestReviewTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â­ En FaydalÄ± Yorum"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#FF9800"
                        android:layout_marginTop="2dp"
                        android:visibility="gone"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvReviews"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:nestedScrollingEnabled="false"/>

                    <TextView
                        android:id="@+id/btnSeeAllReviews"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TÃ¼m YorumlarÄ± GÃ¶r"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#1565C0"
                        android:gravity="center"
                        android:padding="4dp"
                        android:visibility="gone"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"/>

                    <TextView
                        android:id="@+id/btnHideReviews"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="YorumlarÄ± Gizle"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#757575"
                        android:gravity="center"
                        android:padding="4dp"
                        android:visibility="gone"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"/>

                    <TextView
                        android:id="@+id/tvNoReviews"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="HenÃ¼z yorum yapÄ±lmamÄ±ÅŸ."
                        android:textSize="14sp"
                        android:textColor="#9E9E9E"
                        android:gravity="center"
                        android:padding="4dp"
                        android:visibility="gone"/>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="16dp"
            android:padding="16dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddToCart"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#212121"
                android:text="Sepete Ekle"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="8dp"
                app:icon="@android:drawable/ic_input_add"
                app:iconGravity="textStart" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGoToStore"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:backgroundTint="#FF6F00"
                android:text="Firmaya Git"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="8dp"
                app:icon="@android:drawable/ic_menu_send"
                app:iconGravity="textStart" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>